@model AtulaTestWebsite.Models.ViewModels.ProductVM
<partial name="_Notification" />
<partial name="_ValidationScriptsPartial" />

@{
    ViewData["Title"] = "Edit Product";
}

<h2>Edit Product</h2>

<form asp-action="Edit" method="post" class="form-horizontal">
    <div class="mb-3">
        <label asp-for="Name" class="form-label" style="font-size: 20px;">Product Name</label>
        <input asp-for="Name" class="form-control" style="font-size: 18px;" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Sku" class="form-label" style="font-size: 20px;">SKU</label>
        <input asp-for="Sku" class="form-control" style="font-size: 18px;" />
        <span asp-validation-for="Sku" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label">Select Category</label>
        @Html.DropDownListFor(m => m.CategoryId, Model.Categories, "Select One...", new { @class = "form-control" })
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <small class="form-text text-muted mt-2">
        <a asp-area="Admin" asp-controller="Category" asp-action="Create" asp-route-returnUrl="@Url.Action("Edit", "Product", new { area = "Admin" })" class="text-primary">
            Can't find your category? Create a new one
        </a>
    </small>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a class="btn btn-secondary" asp-area="Admin" asp-controller="Product" asp-action="Index">Back to List</a>
</form>
