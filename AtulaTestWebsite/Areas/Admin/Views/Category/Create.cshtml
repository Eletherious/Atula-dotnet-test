@model AtulaTestWebsite.Models.ViewModels.CategoryVM
<partial name="_ValidationScriptsPartial" />

@{
    ViewData["Title"] = "Create Category";
}

<h2>Create Category</h2>

<form asp-action="Create" method="post" class="form-horizontal">
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Product Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

    <button type="submit" class="btn btn-primary">Create</button>
    <a class="btn btn-secondary" asp-area="Admin" asp-controller="Category" asp-action="Index">Back to List</a>
</form>
