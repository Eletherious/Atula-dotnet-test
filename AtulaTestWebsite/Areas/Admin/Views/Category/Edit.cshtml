@model AtulaTestWebsite.Models.ViewModels.CategoryVM
<partial name="_ValidationScriptsPartial" />

@{
    ViewData["Title"] = "Edit Category";
}

<h2>Category Product</h2>

<form asp-action="Edit" method="post" class="form-horizontal">
    <div class="mb-3">
        <label asp-for="Name" class="form-label" style="font-size: 20px;">Product Name</label>
        <input asp-for="Name" class="form-control" style="font-size: 18px;" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a class="btn btn-secondary" asp-area="Admin" asp-controller="Category" asp-action="Index">Back to List</a>
</form>
